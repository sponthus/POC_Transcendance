{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": [
		"src",
		"server"
	],
	"exclude": [
		"node_modules"
	]
}
